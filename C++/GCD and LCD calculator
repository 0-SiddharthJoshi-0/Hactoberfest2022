#include <iostream>

using namespace std;

int main()
{
    int a =0, b=0;
    cout<< "Enter first number "; cin>>a;
    cout<< "Enter second number "; cin>>b; cout<<endl;
    int pro = a*b; int hcf=1;
    for (int x=1; x<=a; x++)
    {
        if(a%x==0 && b%x==0)
        {
            hcf=x;
        }
        
    }
    cout<<"The HCF or GCD is = "<<hcf<<endl;
    cout<<"The LCM or LCD is = "<<(pro/hcf);
}
